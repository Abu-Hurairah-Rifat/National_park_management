<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.EcoTourGuide.OperationalAlertsController">
    <children>
        <Label text="Operational Alerts">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
        <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
            <items>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Alerts Inbox">
                            <padding>
                                <Insets left="5.0" />
                            </padding>
                        </Label>
                        <ListView fx:id="alertsListView" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Alert Details">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="alertDetailsArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                        <Button fx:id="acknowledgeButton" mnemonicParsing="false" text="Acknowledge High-Priority Alert" />
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>