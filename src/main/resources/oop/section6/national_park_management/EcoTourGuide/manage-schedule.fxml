<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.EcoTourGuide.ManageScheduleController">
    <top>
        <Label text="Manage Availability and Schedule" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <GridPane fx:id="calendarGridPane" hgap="5.0" vgap="5.0" alignment="CENTER" style="-fx-border-color: #cccccc; -fx-background-color: #ffffff;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
        </GridPane>
    </center>
    <right>
        <VBox prefWidth="250.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Update Availability">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <VBox spacing="5.0" style="-fx-border-color: #dcdcdc; -fx-padding: 5; -fx-border-radius: 5;">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Region prefHeight="15.0" prefWidth="15.0" style="-fx-background-color: #c8e6c9;" />
                                <Label text="Available" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Region prefHeight="15.0" prefWidth="15.0" style="-fx-background-color: #bbdefb;" />
                                <Label text="Booked" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Region prefHeight="15.0" prefWidth="15.0" style="-fx-background-color: #ffcdd2;" />
                                <Label text="Blocked" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Select Dates:" />
                        <DatePicker fx:id="startDatePicker" prefWidth="250.0" promptText="Start Date" />
                        <DatePicker fx:id="endDatePicker" prefWidth="250.0" promptText="End Date" />
                        <Label text="Set Status To:" />
                        <ComboBox fx:id="statusComboBox" prefWidth="250.0" promptText="Choose a status..." />
                        <Button fx:id="updateStatusButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Update Status" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Set Weekly Hours (e.g., 09:00):" />
                        <TextField fx:id="workHoursStartField" promptText="Start Time" />
                        <TextField fx:id="workHoursEndField" promptText="End Time" />
                        <Button fx:id="saveHoursButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Save Weekly Hours" />
                    </children>
                </VBox>
                <Label fx:id="statusLabel" textFill="#0b862b" />
            </children>
        </VBox>
    </right>
</BorderPane>