<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.EcoTourGuide.EarningsHistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Earnings and Tour History">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="50.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <children>
                <Label fx:id="monthlyEarningsLabel" text="This Month's Earnings: N/A" />
                <Label fx:id="ytdEarningsLabel" text="Year-to-Date Earnings: N/A" />
            </children>
        </HBox>
        <TitledPane animated="false" text="Tour History" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="10.0">
                    <children>
                        <TextField fx:id="searchHistoryField" promptText="Search by date or client name..." />
                        <TableView fx:id="tourHistoryTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="dateCol" prefWidth="150.0" text="Date" />
                                <TableColumn fx:id="clientCol" prefWidth="250.0" text="Client" />
                                <TableColumn fx:id="earningsCol" prefWidth="150.0" text="Net Earnings" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </content>
        </TitledPane>
        <Button fx:id="payoutsButton" mnemonicParsing="false" text="View Payouts &amp; Bank Info" />
    </children>
</VBox>