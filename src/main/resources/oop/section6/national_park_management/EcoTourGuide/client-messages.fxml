<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.EcoTourGuide.ClientMessagesController">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Secure Client Communication">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Select Conversation:" />
                <ComboBox fx:id="toursComboBox" prefWidth="300.0" promptText="Select a confirmed tour..." />
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
        </VBox>
    </top>
    <center>
        <ListView fx:id="chatListView" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
        </ListView>
    </center>
    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <TextField fx:id="messageField" promptText="Type a message..." HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" mnemonicParsing="false" prefWidth="100.0" text="Send" />
        </HBox>
    </bottom>
</BorderPane>