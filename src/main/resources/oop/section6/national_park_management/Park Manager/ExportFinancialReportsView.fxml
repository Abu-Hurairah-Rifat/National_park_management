<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="oop.section6.national_park_management.ExportFinanceController"
            prefHeight="600" prefWidth="650">

    <top>
        <Label text="Export Financial Reports"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="10"/>
            </padding>
        </Label>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40" left="30" right="30" bottom="40"/>
            </padding>

            <HBox spacing="15" alignment="CENTER">
                <Label text="Select Month:"/>
                <ComboBox fx:id="monthComboBox" prefWidth="180"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Label text="Select Year:"/>
                <ComboBox fx:id="yearComboBox" prefWidth="180"/>
            </HBox>

            <Button fx:id="exportBtn" text="Export Report as PDF" prefWidth="200"/>
        </VBox>
    </center>

</BorderPane>
