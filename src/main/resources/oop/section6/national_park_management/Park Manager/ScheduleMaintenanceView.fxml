<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.ScheduleMaintenanceController"
            prefWidth="650" prefHeight="600">

    <top>
        <Label text="Schedule Maintenance Tasks"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </Label>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="taskTable" prefHeight="350" prefWidth="600">
                <columns>
                    <TableColumn fx:id="colTaskId" text="Task ID" prefWidth="100"/>
                    <TableColumn fx:id="colIssueType" text="Issue Type" prefWidth="150"/>
                    <TableColumn fx:id="colLocation" text="Location" prefWidth="150"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="assignStaffBtn" text="Assign Staff" prefWidth="150"/>
                <Button fx:id="setStatusBtn" text="Update Status" prefWidth="150"/>
                <Button fx:id="refreshBtn" text="Refresh Table" prefWidth="150"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
