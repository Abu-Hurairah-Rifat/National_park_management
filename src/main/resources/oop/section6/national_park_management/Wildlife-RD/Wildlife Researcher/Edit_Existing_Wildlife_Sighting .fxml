<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.Wildlife-RD.Wildlife Researcher.EditExistingWildlifeSighting"
            prefHeight="600.0" prefWidth="800.0">
    
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        
        <Text text="Edit Wildlife Sighting" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Species Name -->
            <Label text="Species Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="speciesNameField" promptText="Enter species name" 
                      GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <!-- Location -->
            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="locationField" promptText="Enter sighting location" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <!-- Date -->
            <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="datePicker" promptText="Select date" 
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <!-- Time -->
            <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="timeField" promptText="Enter time (HH:mm)" 
                      GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <!-- Notes -->
            <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextArea fx:id="notesArea" promptText="Enter additional notes" 
                     GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="3"/>
            
            <!-- Photo -->
            <Label text="Photo:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <Button fx:id="photoButton" text="Change Photo" onAction="#handlePhotoChange"/>
                <Label fx:id="photoNameLabel"/>
            </HBox>
        </GridPane>
        
        <!-- Validation Messages -->
        <VBox fx:id="validationMessages" spacing="5" styleClass="validation-box"/>
        
        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="saveButton" text="Save Changes" 
                    onAction="#handleSaveChanges" styleClass="primary-button"/>
            <Button fx:id="cancelButton" text="Cancel" 
                    onAction="#handleCancel" styleClass="secondary-button"/>
        </HBox>
        
        <!-- Status Message -->
        <Label fx:id="statusLabel" styleClass="status-label"/>
    </VBox>
    
    <stylesheets>
        <URL value="@../styles.css"/>
    </stylesheets>
    
</AnchorPane>
