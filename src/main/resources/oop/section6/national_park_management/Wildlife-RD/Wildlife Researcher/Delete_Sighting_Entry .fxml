<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.Wildlife-RD.Wildlife Researcher.DeleteSightingEntry"
            prefHeight="700.0" prefWidth="1000.0">
    
    <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        
        <Text text="Delete Wildlife Sighting" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <!-- Table View -->
        <TableView fx:id="sightingsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date"/>
                <TableColumn fx:id="timeColumn" text="Time"/>
                <TableColumn fx:id="speciesColumn" text="Species"/>
                <TableColumn fx:id="locationColumn" text="Location"/>
                <TableColumn fx:id="notesColumn" text="Notes"/>
            </columns>
        </TableView>
        
        <!-- Selected Entry Details -->
        <TitledPane text="Selected Sighting Details" expanded="true">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="5">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    
                    <Label text="Species:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="selectedSpeciesLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="selectedDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="selectedLocationLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>
        </TitledPane>
        
        <!-- Delete Confirmation -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Are you sure you want to delete this sighting?" 
                   style="-fx-font-weight: bold;"/>
            <Label text="This action cannot be undone." 
                   style="-fx-text-fill: red;"/>
        </VBox>
        
        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="deleteButton" text="Delete Sighting" 
                    onAction="#handleDelete" styleClass="danger-button"/>
            <Button fx:id="cancelButton" text="Cancel" 
                    onAction="#handleCancel" styleClass="secondary-button"/>
        </HBox>
        
        <!-- Status Message -->
        <Label fx:id="statusLabel" styleClass="status-label"/>
    </VBox>
    
    <stylesheets>
        <URL value="@../styles.css"/>
    </stylesheets>
    
</AnchorPane>
