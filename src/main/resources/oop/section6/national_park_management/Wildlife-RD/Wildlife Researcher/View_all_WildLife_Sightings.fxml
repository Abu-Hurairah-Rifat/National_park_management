<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.Wildlife-RD.Wildlife Researcher.ViewAllWildlifeSightings"
            prefHeight="800.0" prefWidth="1200.0">

    <VBox spacing="10" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" 
          AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
        
        <!-- Header -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Wildlife Sightings" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <!-- Filter Controls -->
            <Label text="Filter by:"/>
            <ComboBox fx:id="filterTypeComboBox" promptText="Filter Type">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Species"/>
                        <String fx:value="Location"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="filterField" promptText="Enter filter text"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="sightingsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="speciesColumn" text="Species"/>
                <TableColumn fx:id="locationColumn" text="Location"/>
                <TableColumn fx:id="dateColumn" text="Date"/>
                <TableColumn fx:id="timeColumn" text="Time"/>
                <TableColumn fx:id="notesColumn" text="Notes"/>
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="viewDetailsButton" text="View Details" onAction="#handleViewDetails"/>
            <Button fx:id="editButton" text="Edit" onAction="#handleEdit"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"/>
            <Button fx:id="exportButton" text="Export to CSV" onAction="#handleExport"/>
            <Button fx:id="returnButton" text="Return to Dashboard" onAction="#handleReturn"/>
        </HBox>

    </VBox>

    <!-- Status Message -->
    <Label fx:id="statusLabel" styleClass="status-label"
           AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0"/>

</AnchorPane>"1.0" encoding="UTF-8"?>

