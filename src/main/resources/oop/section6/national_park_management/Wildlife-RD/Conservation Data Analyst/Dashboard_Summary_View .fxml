<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.Wildlife_RD.ConservationDataAnalyst.DashboardController"
            prefHeight="900.0" prefWidth="1400.0"
            styleClass="main-anchor-pane">

    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Header -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <ImageView fx:id="logoImage" fitHeight="50" fitWidth="50"/>
            <Label text="Conservation Data Analytics Dashboard" styleClass="dashboard-title">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="refreshButton" text="Refresh Data" onAction="#handleRefresh" styleClass="action-button"/>
            <Button fx:id="exportDashboardButton" text="Export Dashboard" onAction="#handleExportDashboard" styleClass="action-button"/>
        </HBox>

        <!-- Summary Cards -->
        <HBox spacing="20" alignment="CENTER">
            <VBox styleClass="summary-card" spacing="10">
                <Label text="Total Sightings" styleClass="card-title"/>
                <Label fx:id="totalSightingsLabel" styleClass="card-value"/>
                <Label fx:id="sightingsTrendLabel" styleClass="trend-label"/>
            </VBox>
            
            <VBox styleClass="summary-card" spacing="10">
                <Label text="Unique Species" styleClass="card-title"/>
                <Label fx:id="uniqueSpeciesLabel" styleClass="card-value"/>
                <Label fx:id="speciesTrendLabel" styleClass="trend-label"/>
            </VBox>
            
            <VBox styleClass="summary-card" spacing="10">
                <Label text="Active Regions" styleClass="card-title"/>
                <Label fx:id="activeRegionsLabel" styleClass="card-value"/>
                <Label fx:id="regionsTrendLabel" styleClass="trend-label"/>
            </VBox>
            
            <VBox styleClass="summary-card" spacing="10">
                <Label text="Critical Species" styleClass="card-title"/>
                <Label fx:id="criticalSpeciesLabel" styleClass="card-value"/>
                <Label fx:id="criticalTrendLabel" styleClass="trend-label"/>
            </VBox>
        </HBox>

        <!-- Today's Activity -->
        <TitledPane text="Today's New Sightings" expanded="true">
            <TableView fx:id="todaySightingsTable" prefHeight="150">
                <columns>
                    <TableColumn fx:id="timeColumn" text="Time"/>
                    <TableColumn fx:id="speciesColumn" text="Species"/>
                    <TableColumn fx:id="locationColumn" text="Location"/>
                    <TableColumn fx:id="populationColumn" text="Population"/>
                    <TableColumn fx:id="threatLevelColumn" text="Threat Level"/>
                </columns>
            </TableView>
        </TitledPane>

        <!-- Charts Section -->
        <GridPane hgap="20" vgap="20">
            <!-- Threat Level Distribution -->
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Threat Level Distribution" styleClass="chart-title"/>
                <PieChart fx:id="threatLevelChart" prefHeight="300"/>
            </VBox>

            <!-- Population Trends -->
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Population Trends" styleClass="chart-title"/>
                <LineChart fx:id="populationTrendChart" prefHeight="300">
                    <xAxis>
                        <CategoryAxis label="Time Period"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Population"/>
                    </yAxis>
                </LineChart>
            </VBox>

            <!-- Regional Distribution -->
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label text="Regional Distribution" styleClass="chart-title"/>
                <BarChart fx:id="regionalDistributionChart" prefHeight="300">
                    <xAxis>
                        <CategoryAxis label="Region"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Count"/>
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Quick Actions -->
            <VBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="quick-actions">
                <Label text="Quick Actions" styleClass="section-header"/>
                <Button text="Import Wildlife Data" onAction="#handleImportData" styleClass="dashboard-button"/>
                <Button text="Generate Threat Report" onAction="#handleThreatReport" styleClass="dashboard-button"/>
                <Button text="Export Summary Report" onAction="#handleExportSummary" styleClass="dashboard-button"/>
                <Button text="View Population Trends" onAction="#handlePopulationTrends" styleClass="dashboard-button"/>
                <Button text="Clean Invalid Data" onAction="#handleCleanData" styleClass="dashboard-button"/>
                <Button text="Add Analytical Notes" onAction="#handleAddNotes" styleClass="dashboard-button"/>
            </VBox>
        </GridPane>

        <!-- Status Bar -->
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="status-bar">
            <Label fx:id="lastUpdateLabel" text="Last Update: Never"/>
            <Label fx:id="dataStatusLabel" text="Data Status: Unknown"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ProgressIndicator fx:id="updateProgress" visible="false"/>
        </HBox>
    </VBox>
</AnchorPane>
