<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.Wildlife_RD.ConservationDataAnalyst.ImportWildlifeDataController"
            prefHeight="800.0" prefWidth="1200.0"
            styleClass="main-anchor-pane">

    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Header with Back Button -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Button fx:id="backButton" text="â† Back to Dashboard" onAction="#handleBack" styleClass="back-button"/>
            <Label text="Import Wildlife Data" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
        </HBox>
        
        <!-- Import Controls -->
        <TitledPane text="Import Options" expanded="true">
            <GridPane hgap="15" vgap="10">
                <padding>
                    <Insets topRightBottomLeft="15"/>
                </padding>
                
                <!-- File Selection -->
                <Label text="CSV File:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <TextField fx:id="filePathField" promptText="Select CSV file" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="browseButton" text="Browse" onAction="#handleBrowse"/>
                </HBox>
                
                <!-- Import Settings -->
                <Label text="Import Settings:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <CheckBox fx:id="headerCheckbox" text="First row contains headers" selected="true"/>
                    <CheckBox fx:id="validateDataCheckbox" text="Validate data during import" selected="true"/>
                    <CheckBox fx:id="skipInvalidCheckbox" text="Skip invalid records"/>
                </VBox>
                
                <!-- Column Mapping -->
                <Label text="Column Mapping:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <GridPane hgap="10" vgap="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="dateColumnCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="150"/>
                    
                    <Label text="Species:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="speciesColumnCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="150"/>
                    
                    <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="locationColumnCombo" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="150"/>
                    
                    <Label text="Population:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <ComboBox fx:id="populationColumnCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="150"/>
                    
                    <Label text="Threat Level:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <ComboBox fx:id="threatLevelColumnCombo" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="150"/>
                </GridPane>
                
                <!-- Data Format Settings -->
                <Label text="Data Format:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <ComboBox fx:id="dateFormatCombo" promptText="Select Date Format" prefWidth="150"/>
                    <ComboBox fx:id="numberFormatCombo" promptText="Select Number Format" prefWidth="150"/>
                    <TextField fx:id="delimiterField" promptText="CSV Delimiter (default: ,)" prefWidth="150"/>
                </VBox>
            </GridPane>
        </TitledPane>
        
        <!-- Preview Table with Statistics -->
        <TitledPane text="Data Preview" VBox.vgrow="ALWAYS">
            <VBox spacing="10">
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label fx:id="previewLabel" text="No file selected"/>
                    <Label fx:id="totalRowsLabel" text="Total Rows: 0"/>
                    <Label fx:id="uniqueSpeciesLabel" text="Unique Species: 0"/>
                    <Label fx:id="dateRangeLabel" text="Date Range: N/A"/>
                </HBox>
                <TableView fx:id="previewTable" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="Select a CSV file to preview data"/>
                    </placeholder>
                </TableView>
            </VBox>
        </TitledPane>
        
        <!-- Validation Results -->
        <TitledPane text="Validation Results" expanded="false">
            <VBox spacing="10">
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label fx:id="validationSummaryLabel" styleClass="validation-summary"/>
                    <Label fx:id="errorCountLabel" styleClass="error-count"/>
                    <Label fx:id="warningCountLabel" styleClass="warning-count"/>
                </HBox>
                <ListView fx:id="validationList" prefHeight="150" styleClass="validation-list"/>
                <CheckBox fx:id="autoFixCheckbox" text="Attempt to auto-fix common issues"/>
            </VBox>
        </TitledPane>
        
        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="validateButton" text="Validate Data" onAction="#handleValidate" disable="true" styleClass="action-button"/>
            <Button fx:id="importButton" text="Import Data" onAction="#handleImport" disable="true" styleClass="action-button"/>
            <Button fx:id="saveValidationButton" text="Save Validation Report" onAction="#handleSaveValidation" disable="true" styleClass="action-button"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="action-button"/>
        </HBox>
        
        <!-- Progress Section -->
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ProgressBar fx:id="progressBar" prefWidth="300"/>
                <Label fx:id="statusLabel" styleClass="status-label"/>
                <Label fx:id="timeRemainingLabel" styleClass="time-remaining"/>
            </HBox>
            <TextArea fx:id="logArea" prefHeight="100" editable="false" styleClass="log-area" wrapText="true"/>
        </VBox>
    </VBox>

</AnchorPane>
