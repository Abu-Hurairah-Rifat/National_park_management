<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.EcoTourGuide.ManageScheduleController">
    <top>
        <Label text="Manage Availability and Schedule" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="[Calendar View Placeholder]">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label text="A full calendar component would be shown here." />
            </children>
        </VBox>
    </center>
    <right>
        <VBox prefWidth="250.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Update Availability">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Set Weekly Hours (e.g., 09:00):" />
                        <TextField fx:id="workHoursStartField" promptText="Start Time" />
                        <TextField fx:id="workHoursEndField" promptText="End Time" />
                        <Button fx:id="saveHoursButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Save Weekly Hours" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Block Unavailable Dates:" />
                        <DatePicker fx:id="blockStartDatePicker" prefWidth="250.0" promptText="Start Date" />
                        <DatePicker fx:id="blockEndDatePicker" prefWidth="250.0" promptText="End Date" />
                        <Button fx:id="blockDatesButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Block Dates" />
                    </children>
                </VBox>
                <Label fx:id="statusLabel" textFill="#0b862b" />
            </children>
        </VBox>
    </right>
</BorderPane>