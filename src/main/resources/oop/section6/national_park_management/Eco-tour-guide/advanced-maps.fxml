<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.EcoTourGuide.AdvancedMapsController">
    <top>
        <Label text="Advanced Navigation Map" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <ImageView fx:id="mapImageView" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </ImageView>
    </center>
    <right>
        <VBox prefWidth="200.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Map Layers">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <CheckBox fx:id="rangerPostsCheckBox" mnemonicParsing="false" text="Ranger Posts" />
                <CheckBox fx:id="waterSourcesCheckBox" mnemonicParsing="false" text="Water Sources" />
                <CheckBox fx:id="alertsCheckBox" mnemonicParsing="false" text="Live Alerts" />
                <CheckBox fx:id="restrictedZonesCheckBox" mnemonicParsing="false" text="Restricted Zones" />
                <Button fx:id="recenterButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Recenter on My Location" />
            </children>
        </VBox>
    </right>
    <bottom>
        <Button fx:id="downloadMapButton" mnemonicParsing="false" text="Download Map for Offline Use" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>