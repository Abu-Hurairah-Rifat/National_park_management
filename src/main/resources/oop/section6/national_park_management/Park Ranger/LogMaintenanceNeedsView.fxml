<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.section6.national_park_management.Park_Ranger.LogMaintenanceNeedsController"
            prefWidth="650" prefHeight="600">

    <!-- Title -->
    <Label text="Log Maintenance Needs" layoutX="220" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Back Button -->
    <Button fx:id="backButton" text="Back" layoutX="550" layoutY="20" prefWidth="60"
            onAction="#goBack"/>

    <!-- Date Picker -->
    <Label text="Maintenance Date:" layoutX="50" layoutY="70"/>
    <DatePicker fx:id="maintenanceDatePicker" layoutX="180" layoutY="65" prefWidth="150"/>

    <!-- Table -->
    <TableView fx:id="maintenanceTable" layoutX="50" layoutY="110" prefWidth="550" prefHeight="350">
        <columns>
            <TableColumn fx:id="colArea" text="Area" prefWidth="150"/>
            <TableColumn fx:id="colIssue" text="Issue" prefWidth="250"/>
            <TableColumn fx:id="colPriority" text="Priority" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Log Button -->
    <Button fx:id="logMaintenanceButton" text="Log Maintenance" layoutX="50" layoutY="480" prefWidth="200"/>
</AnchorPane>
