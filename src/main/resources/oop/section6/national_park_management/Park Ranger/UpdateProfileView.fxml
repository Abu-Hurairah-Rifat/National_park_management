<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="oop.section6.national_park_management.UpdateProfileController"
            prefHeight="600" prefWidth="650">

    <top>
        <Label text="Update Ranger Profile"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding><Insets top="30" left="40" right="40" bottom="40"/></padding>

            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone Number"/>
            <TextArea fx:id="availabilityArea" promptText="Availability Details" prefRowCount="3"/>
            <Button fx:id="updateProfileBtn" text="Update Profile" prefWidth="200"/>
        </VBox>
    </center>
</BorderPane>
