<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.section6.national_park_management.Park_Ranger.UpdateProfileController"
            prefWidth="650" prefHeight="600">

    <!-- Title -->
    <Label text="Update Profile &amp; Availability" layoutX="190" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Back Button -->
    <Button fx:id="backButton" text="Back" layoutX="550" layoutY="20" prefWidth="60"
            onAction="#goBack"/>

    <!-- Name Field -->
    <Label text="Full Name:" layoutX="50" layoutY="70"/>
    <TextField fx:id="nameField" layoutX="150" layoutY="65" prefWidth="200"/>

    <!-- Contact Field -->
    <Label text="Contact:" layoutX="50" layoutY="110"/>
    <TextField fx:id="contactField" layoutX="150" layoutY="105" prefWidth="200"/>

    <!-- Availability Date -->
    <Label text="Available From:" layoutX="50" layoutY="150"/>
    <DatePicker fx:id="availabilityDatePicker" layoutX="150" layoutY="145" prefWidth="150"/>

    <!-- Table -->
    <TableView fx:id="profileTable" layoutX="50" layoutY="200" prefWidth="550" prefHeight="250">
        <columns>
            <TableColumn fx:id="colField" text="Field" prefWidth="200"/>
            <TableColumn fx:id="colValue" text="Value" prefWidth="350"/>
        </columns>
    </TableView>

    <!-- Save Button -->
    <Button fx:id="updateProfileButton" text="Save Changes" layoutX="50" layoutY="480" prefWidth="200"/>
</AnchorPane>
