<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.section6.national_park_management.Park_Ranger.RecordWildlifeSightingController"
            prefWidth="650" prefHeight="600">

    <!-- Title -->
    <Label text="Record Wildlife Sighting" layoutX="210" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Back Button -->
    <Button fx:id="backButton" text="Back" layoutX="550" layoutY="20" prefWidth="60"
            onAction="#goBack"/>

    <!-- Date Picker -->
    <Label text="Date:" layoutX="50" layoutY="70"/>
    <DatePicker fx:id="sightingDatePicker" layoutX="100" layoutY="65" prefWidth="150"/>

    <!-- Table -->
    <TableView fx:id="sightingTable" layoutX="50" layoutY="110" prefWidth="550" prefHeight="350">
        <columns>
            <TableColumn fx:id="colSpecies" text="Species" prefWidth="200"/>
            <TableColumn fx:id="colLocation" text="Location" prefWidth="200"/>
            <TableColumn fx:id="colNotes" text="Notes" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Record Button -->
    <Button fx:id="recordButton" text="Record Sighting" layoutX="50" layoutY="480" prefWidth="200"/>
</AnchorPane>
