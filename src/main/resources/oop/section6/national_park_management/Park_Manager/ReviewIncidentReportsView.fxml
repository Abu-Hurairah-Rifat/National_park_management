<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.ReviewIncidentReportsController">

    <!-- Title -->
    <Label layoutX="220" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Review Incident Reports" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="534.0" layoutY="480.0" prefWidth="60" text="Back" />

    <!-- Date Picker -->
    <DatePicker fx:id="datePicker" layoutX="50" layoutY="70" prefWidth="200" />

    <!-- Table -->
    <TableView fx:id="incidentTable" layoutX="50" layoutY="110" prefHeight="350" prefWidth="550">
        <columns>
            <TableColumn fx:id="colID" prefWidth="100" text="Report ID" />
            <TableColumn fx:id="colType" prefWidth="200" text="Incident Type" />
            <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
        </columns>
    </TableView>

    <!-- View Details Button -->
    <Button fx:id="viewButton" layoutX="50" layoutY="480" prefWidth="200" text="View Details" />

</AnchorPane>
