<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.ScheduleMaintenanceController">

    <!-- Title -->
    <Label layoutX="230" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Schedule Maintenance" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="540.0" layoutY="480.0" prefWidth="60" text="Back" />

    <!-- Date Picker -->
    <DatePicker fx:id="datePicker" layoutX="50" layoutY="70" prefWidth="200" />

    <!-- Table -->
    <TableView fx:id="maintenanceTable" layoutX="50" layoutY="110" prefHeight="350" prefWidth="550">
        <columns>
            <TableColumn fx:id="colTask" prefWidth="200" text="Maintenance Task" />
            <TableColumn fx:id="colLocation" prefWidth="200" text="Location" />
            <TableColumn fx:id="colDate" prefWidth="150" text="Scheduled Date" />
        </columns>
    </TableView>

    <!-- Schedule Button -->
    <Button fx:id="scheduleButton" layoutX="50" layoutY="480" prefWidth="200" text="Schedule Task" />

</AnchorPane>
