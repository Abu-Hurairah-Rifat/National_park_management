<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.ExportFinanceController">

    <!-- Title -->
    <Label layoutX="220" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Export Financial Reports" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="540.0" layoutY="480.0" prefWidth="60" text="Back" />

    <!-- Date Range Pickers -->
    <Label layoutX="50" layoutY="70" text="From:" />
    <DatePicker fx:id="fromDatePicker" layoutX="100" layoutY="65" prefWidth="150" />
    <Label layoutX="300" layoutY="70" text="To:" />
    <DatePicker fx:id="toDatePicker" layoutX="340" layoutY="65" prefWidth="150" />

    <!-- Table -->
    <TableView fx:id="reportTable" layoutX="50" layoutY="110" prefHeight="350" prefWidth="550">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
            <TableColumn fx:id="colDescription" prefWidth="250" text="Description" />
            <TableColumn fx:id="colAmount" prefWidth="150" text="Amount" />
        </columns>
    </TableView>

    <!-- Export Button -->
    <Button fx:id="exportButton" layoutX="50" layoutY="480" prefWidth="200" text="Export to PDF" />

</AnchorPane>
