<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.ParkManagerController">

    <!-- Title -->
    <Label layoutX="205.0" layoutY="40.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Park Manager Dashboard" textFill="#0d3c83" />

    <!-- Buttons -->
    <Button fx:id="btnGoal1" layoutX="50.0" layoutY="120.0" prefHeight="50" prefWidth="250"
            text="Approve Schedules" onAction="#openApproveSchedules" />

    <Button fx:id="btnGoal2" layoutX="350.0" layoutY="120.0" prefHeight="50" prefWidth="250"
            text="Monitor Visitors" onAction="#openMonitorVisitors" />

    <Button fx:id="btnGoal3" layoutX="50.0" layoutY="212.0" prefHeight="50" prefWidth="250"
            text="Review Incident Reports" onAction="#openReviewIncidentReports" />

    <Button fx:id="btnGoal4" layoutX="350.0" layoutY="212.0" prefHeight="50" prefWidth="250"
            text="Assign Patrol Zones" onAction="#openAssignPatrolZones" />

    <Button fx:id="btnGoal5" layoutX="57.0" layoutY="300.0" prefHeight="50" prefWidth="250"
            text="Manage Wildlife Census" onAction="#openManageWildlifeCensus" />

    <Button fx:id="btnGoal6" layoutX="350.0" layoutY="300.0" prefHeight="50" prefWidth="250"
            text="Schedule Maintenance" onAction="#openScheduleMaintenance" />

    <Button fx:id="btnGoal7" layoutX="57.0" layoutY="392.0" prefHeight="50" prefWidth="250"
            text="Set Entry Fee Rates" onAction="#openSetEntryFeeRates" />

    <Button fx:id="btnGoal8" layoutX="350.0" layoutY="392.0" prefHeight="50" prefWidth="250"
            text="Export Financial Reports" onAction="#openExportFinance" />

    <!-- Logout Button -->
    <Button fx:id="logoutButton" layoutX="501.0" layoutY="506.0" prefHeight="30" prefWidth="80"
            text="Logout" onAction="#logout" />

</AnchorPane>
