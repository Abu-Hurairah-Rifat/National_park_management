<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.AssignPatrolZonesController">

    <!-- Title -->
    <Label layoutX="240" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Assign Patrol Zones" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="504.0" layoutY="480.0" prefWidth="60" text="Back" />

    <!-- Date Picker -->
    <DatePicker fx:id="datePicker" layoutX="50" layoutY="70" prefWidth="200" />

    <!-- Table -->
    <TableView fx:id="zoneTable" layoutX="50" layoutY="110" prefHeight="350" prefWidth="550">
        <columns>
            <TableColumn fx:id="colRanger" prefWidth="200" text="Ranger Name" />
            <TableColumn fx:id="colZone" prefWidth="200" text="Assigned Zone" />
            <TableColumn fx:id="colDate" prefWidth="150" text="Date Assigned" />
        </columns>
    </TableView>

    <!-- Assign Button -->
    <Button fx:id="assignButton" layoutX="50" layoutY="480" prefWidth="200" text="Assign Zone" />

</AnchorPane>
