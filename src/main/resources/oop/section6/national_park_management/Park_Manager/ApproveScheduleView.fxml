<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.ApproveScheduleController">

    <!-- Title -->
    <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Approve Ranger Schedules" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="529.0" layoutY="480.0" prefWidth="60" text="Back" />

    <!-- Date Picker -->
    <DatePicker fx:id="datePicker" layoutX="50" layoutY="70" prefWidth="200" />

    <!-- Table -->
    <TableView fx:id="scheduleTable" layoutX="50" layoutY="110" prefHeight="350" prefWidth="550">
        <columns>
            <TableColumn fx:id="colRanger" prefWidth="200" text="Ranger Name" />
            <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
            <TableColumn fx:id="colStatus" prefWidth="200" text="Status" />
        </columns>
    </TableView>

    <!-- Approve Button -->
    <Button fx:id="approveButton" layoutX="50" layoutY="480" prefWidth="200" text="Approve Selected" />

</AnchorPane>
