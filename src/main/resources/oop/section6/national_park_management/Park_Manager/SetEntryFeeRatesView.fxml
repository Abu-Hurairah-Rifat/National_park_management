<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="650" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Park_Manager.SetEntryFeeRatesController">

    <!-- Title -->
    <Label layoutX="240" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Set Entry Fee Rates" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="540.0" layoutY="450.0" prefWidth="60" text="Back" />

    <!-- Table -->
    <TableView fx:id="feeTable" layoutX="50" layoutY="70" prefHeight="350" prefWidth="550">
        <columns>
            <TableColumn fx:id="colCategory" prefWidth="250" text="Visitor Category" />
            <TableColumn fx:id="colRate" prefWidth="250" text="Fee Rate" />
        </columns>
    </TableView>

    <!-- Update Fee Button -->
    <Button fx:id="updateFeeButton" layoutX="50" layoutY="450" prefWidth="200" text="Update Fee Rates" />

</AnchorPane>
