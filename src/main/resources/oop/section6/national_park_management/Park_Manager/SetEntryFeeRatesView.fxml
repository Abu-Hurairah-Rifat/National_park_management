<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.section6.national_park_management.Park_Ranger.SetEntryFeeRatesController"
            prefWidth="650" prefHeight="600">

    <top>
        <Label text="Set Entry Fee Rates"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
        </Label>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <HBox spacing="20" alignment="CENTER">
                <Label text="Adult Entry Fee (৳):"/>
                <TextField fx:id="adultFeeField" promptText="Enter fee" prefWidth="150"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Label text="Child Entry Fee (৳):"/>
                <TextField fx:id="childFeeField" promptText="Enter fee" prefWidth="150"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Label text="Foreigner Fee (৳):"/>
                <TextField fx:id="foreignerFeeField" promptText="Enter fee" prefWidth="150"/>
            </HBox>

            <Button fx:id="saveFeeBtn" text="Save Rates" prefWidth="180"/>
        </VBox>
    </center>
</BorderPane>
