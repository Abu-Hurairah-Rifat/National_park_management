<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: tan;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.conservation.UpdateMetricsController">
    <children>
        <Label layoutX="150.0" layoutY="20.0" text="Update Metrics" textFill="WHITE">
            <font><Font name="Times New Roman Bold" size="24.0" /></font>
        </Label>

        <Label layoutX="50.0" layoutY="70.0" text="Metric:" textFill="WHITE" />
        <ComboBox fx:id="metricCombo" layoutX="150.0" layoutY="70.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="110.0" text="Current Value:" textFill="WHITE" />
        <Label fx:id="currentValue" layoutX="150.0" layoutY="110.0" textFill="WHITE" />

        <Label layoutX="50.0" layoutY="150.0" text="New Value:" textFill="WHITE" />
        <TextField fx:id="newValue" layoutX="150.0" layoutY="150.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="190.0" text="Notes:" textFill="WHITE" />
        <TextArea fx:id="notesArea" layoutX="150.0" layoutY="190.0" prefHeight="100.0" prefWidth="300.0" />

        <Button layoutX="150.0" layoutY="310.0" mnemonicParsing="false" onAction="#updateMetric" prefWidth="100.0" style="-fx-background-color: teal;" text="Update" textFill="WHITE" />
        <Button layoutX="300.0" layoutY="310.0" mnemonicParsing="false" onAction="#backToDashboard" prefWidth="100.0" style="-fx-background-color: teal;" text="Back" textFill="WHITE" />
      <TextField fx:id="newValue1" layoutX="150.0" layoutY="106.0" prefWidth="300.0" />
    </children>
</AnchorPane>
