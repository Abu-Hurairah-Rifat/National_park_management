<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: tan;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wildlife.RequestExportController">
    <children>
        <Label layoutX="150.0" layoutY="20.0" text="Data Export" textFill="WHITE">
            <font><Font name="Times New Roman Bold" size="24.0"/></font>
        </Label>

        <Label layoutX="50.0" layoutY="70.0" text="Date Range:" textFill="WHITE"/>
        <DatePicker fx:id="startDate" layoutX="150.0" layoutY="70.0"/>
        <DatePicker fx:id="endDate" layoutX="300.0" layoutY="70.0"/>

        <Label layoutX="50.0" layoutY="110.0" text="Species:" textFill="WHITE"/>
        <TextField fx:id="speciesField" layoutX="150.0" layoutY="110.0" prefWidth="300.0"/>

        <Label layoutX="50.0" layoutY="150.0" text="Format:" textFill="WHITE"/>
        <ComboBox fx:id="formatCombo" layoutX="150.0" layoutY="150.0" prefWidth="150.0"/>

        <Button layoutX="150.0" layoutY="200.0" mnemonicParsing="false" onAction="#requestExport" text="Request" style="-fx-background-color: teal;" textFill="WHITE" prefWidth="100.0"/>
        <Button layoutX="300.0" layoutY="200.0" mnemonicParsing="false" onAction="#backToDashboard" text="Back" style="-fx-background-color: teal;" textFill="WHITE" prefWidth="100.0"/>
    </children>
</AnchorPane>
