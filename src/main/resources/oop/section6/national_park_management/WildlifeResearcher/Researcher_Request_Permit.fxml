<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: tan;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.wildlife.RequestPermitController">
    <children>
        <Label layoutX="150.0" layoutY="20.0" text="Request Permit" textFill="WHITE">
            <font><Font name="Times New Roman Bold" size="24.0"/></font>
        </Label>

        <Label layoutX="50.0" layoutY="70.0" text="Purpose:" textFill="WHITE"/>
        <TextArea fx:id="purposeArea" layoutX="150.0" layoutY="70.0" prefWidth="300.0" prefHeight="80.0"/>

        <Label layoutX="50.0" layoutY="170.0" text="Start Date:" textFill="WHITE"/>
        <DatePicker fx:id="startDate" layoutX="150.0" layoutY="170.0"/>

        <Label layoutX="50.0" layoutY="210.0" text="End Date:" textFill="WHITE"/>
        <DatePicker fx:id="endDate" layoutX="150.0" layoutY="210.0"/>

        <Label layoutX="50.0" layoutY="250.0" text="Areas:" textFill="WHITE"/>
        <TextField fx:id="areasField" layoutX="150.0" layoutY="250.0" prefWidth="300.0"/>

        <Button layoutX="150.0" layoutY="300.0" mnemonicParsing="false" onAction="#submitRequest" text="Submit" style="-fx-background-color: teal;" textFill="WHITE" prefWidth="100.0"/>
        <Button layoutX="300.0" layoutY="300.0" mnemonicParsing="false" onAction="#backToDashboard" text="Back" style="-fx-background-color: teal;" textFill="WHITE" prefWidth="100.0"/>
    </children>
</AnchorPane>
