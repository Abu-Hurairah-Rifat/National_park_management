<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Tourist.ReportIssueController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Report a Safety or Environmental Issue" textFill="RED">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Issue Category:" />
                <ComboBox fx:id="issueCategoryComboBox" maxWidth="1.7976931348623157E308" promptText="Select the type of issue..." />
                <Label text="Description:" />
                <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Provide a detailed description of the issue." wrapText="true" />
                <Label text="Upload Photo/Video Evidence:" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="uploadEvidenceButton" mnemonicParsing="false" text="Upload Evidence" />
                        <Label fx:id="evidenceFileLabel" />
                    </children>
                </HBox>
                <Label text="Issue Location (GPS Auto-Detected):" />
                <ImageView fx:id="mapImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </VBox>
        <Button fx:id="submitReportButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" text="Submit Urgent Report" />
        <Label fx:id="confirmationLabel" textFill="#0b862b">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
    </children>
</VBox>