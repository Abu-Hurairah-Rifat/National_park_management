<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Tourist.PurchaseTicketsController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="195.0" layoutY="38.0" prefHeight="525.0" prefWidth="411.0" spacing="15.0" AnchorPane.bottomAnchor="37.0" AnchorPane.leftAnchor="195.0" AnchorPane.rightAnchor="195.0" AnchorPane.topAnchor="38.0">
            <children>
                <Label text="Purchase Entry Tickets">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="282.0" minWidth="10.0" prefWidth="281.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Select Visit Date:" />
                        <DatePicker fx:id="visitDatePicker" prefHeight="25.0" prefWidth="283.0" promptText="Choose a date" GridPane.columnIndex="1" />
                        <Label text="Number of Tickets:" GridPane.rowIndex="1" />
                        <Spinner fx:id="numberOfTicketsSpinner" editable="true" prefHeight="25.0" prefWidth="292.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
                <Separator prefWidth="200.0" />
                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="Order Summary:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Total Cost:" />
                                <Label fx:id="totalCostLabel" text="0.00">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Separator prefWidth="200.0" />
                <VBox spacing="10.0">
                    <children>
                        <Label text="Payment Details:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="282.0" minWidth="10.0" prefWidth="281.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Payment Method:" />
                                <ComboBox fx:id="paymentMethodComboBox" prefHeight="25.0" prefWidth="296.0" promptText="Select a method" GridPane.columnIndex="1" />
                                <Label text="Card Details:" GridPane.rowIndex="1" />
                                <TextField fx:id="paymentDetailsField" promptText="Enter card number, expiry, etc." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                <Button fx:id="confirmPaymentButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="175.0" text="Confirm and Process Payment">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <VBox fx:id="confirmationVBox" alignment="CENTER" managed="false" spacing="10.0" visible="false">
                    <children>
                        <Label text="Purchase Confirmed!">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Booking ID:" />
                                <Label fx:id="bookingIdLabel" text="N/A" />
                            </children>
                        </HBox>
                        <Button fx:id="myTicketsButton" mnemonicParsing="false" text="Go to My Tickets" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>