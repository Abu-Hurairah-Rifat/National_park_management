<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.section6.national_park_management.Tourist.PlanItineraryController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Plan Your Visit Itinerary">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Load a Saved Itinerary:" />
                        <ComboBox fx:id="savedItinerariesComboBox" prefWidth="250.0" promptText="Select a plan" />
                        <Button fx:id="loadItineraryButton" mnemonicParsing="false" text="Load" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Available Attractions">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ListView fx:id="attractionsListView" prefHeight="200.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" prefWidth="80.0" text="Add &gt;&gt;" />
                        <Button fx:id="removeButton" mnemonicParsing="false" prefWidth="80.0" text="&lt;&lt; Remove" />
                    </children>
                </VBox>

                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="My Draft Itinerary">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <ListView fx:id="itineraryListView" prefHeight="200.0" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="moveUpButton" mnemonicParsing="false" text="Move Up" />
                                <Button fx:id="moveDownButton" mnemonicParsing="false" text="Move Down" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-border-color: #cccccc; -fx-background-color: #fafafa;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Itinerary Name:" />
                        <TextField fx:id="itineraryNameField" prefWidth="300.0" promptText="e.g., My Family Trip" />
                        <Button fx:id="saveItineraryButton" mnemonicParsing="false" prefWidth="120.0" text="Save Itinerary" />
                        <Label fx:id="statusLabel" textFill="#0b862b" />
                    </children>
                </HBox>
                <Label text="Attraction Location (Map)" />
                <ImageView fx:id="mapImageView" fitHeight="150.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </VBox>
    </bottom>
</BorderPane>